import (
  . "std/faas"
)

@function BuyTrainTicket {
  runtime = "nodejs"
}

@workflow OrderTicketFlow {
  functions = [BuyTrainTicket]

  // workflow spec runtime
  runtime = "nodejs"
  codeDir = "./javascript"
}

@application OrderTicket {
  workflow = OrderTicketFlow
  defaultProvider = Local

  // used by `ft run`
  inputExamples = [
    {
      value = {
        control = {
          BuyTrainTicket = "ok"
          ReserveFlight = "ok"
          ReserveHotel = "ok"
        }
      }
    },
    {
      value = {
        control = {
          BuyTrainTicket = "ok"
          ReserveFlight = "fail"
          ReserveHotel = "ok"
        }
      }
    },
    {
      value = {
        control = {
          BuyTrainTicket = "ok"
          ReserveFlight = "ok"
          ReserveHotel = "fail"
        }
      }
    }
  ]
}

@provider Local {
  kind = "local-once"
}

@provider Knative {
  kind = "knative"
}


